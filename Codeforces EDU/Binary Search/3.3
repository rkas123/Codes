    }
    int e=A[n-1];
    int answer;
    while(s<=e)
    {
        int mid=(s+e)/2;
        //cout<<s<<" "<<e<<" "<<mid<<" "<<answer<<endl;
        if(pos(mid))
        {
            answer=mid;
            s=mid+1;
        }
        else
        {
            e=mid-1;
        }
    }
    cout<<answer<<endl;
    return 0;
}
