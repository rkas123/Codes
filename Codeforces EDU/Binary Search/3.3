using namespace std;
int n,k;
int A[100005];
bool pos(int mid)
{
    int i=0;
    int count=1;
    int curr=A[0];
    while(i<n)
    {
        while(i<n && A[i]-curr < mid)
        {
            i++;
        }
        if(i!=n)
        {
            count++;
            curr=A[i];
        }
    }
    if(count>=k)
        return true;
    return false;
}
