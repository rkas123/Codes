using namespace std;
int n,k;
ll A[100005];
bool pos(ll val)
{
    int i=0;
    ll count=0;
    while(i<n)
    {
        ll cum=0;
        while(i<n && cum+A[i]<=val)
        {
            cum+=A[i];
            i++;
        }
        count++;
    }
    if(count>k)
        return false;
    return true;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    #ifndef ONLINE_JUDGE
      freopen("input.txt", "r", stdin);
      freopen("output.txt", "w", stdout);
    #endif
    cin>>n>>k;
    ll sum=0;
    ll s=0;
    for(int i=0;i<n;i++)
    {
        cin>>A[i];
        sum+=A[i];
        s=max(s,A[i]);
    }
    ll e=sum;
    ll answer=sum;
    int count=50;
    while(count--)
    {
        ll mid=(s+e)/2;
        if(pos(mid))
        {
            answer=mid;
            e=mid;
        }
        else
        {
            s=mid;
        }
    }
    cout<<answer<<endl;
    return 0;
}
